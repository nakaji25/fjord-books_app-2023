<div id="<%= dom_id comment %>">
  <p>
    <strong><%= Comment.human_attribute_name(:content) %>:</strong>
    <%= comment.content %>
  </p>
  <p>
    <strong><%= Comment.human_attribute_name(:date) %>:</strong>
    <%= comment.created_at.strftime('%Y/%m/%d') %>
  </p>
  <p>
    <strong><%= Comment.human_attribute_name(:user) %>:</strong>
    <%= comment.user.name %>
  </p>

</div>
